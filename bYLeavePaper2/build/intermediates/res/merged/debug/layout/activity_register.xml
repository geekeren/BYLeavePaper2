<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.wangbaiyuan.byleavepaper.RegisterActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:entries="@array/type"
                    android:minWidth="200dp" />

                <EditText
                    android:id="@+id/paper_teacherid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/qq_edit_login"
                    android:ems="10"
                    android:hint="学工号"
                    android:inputType="textPersonName"
                    android:minWidth="50dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/login_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qq_edit_login"
                android:ems="10"
                android:hint="设置密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:saveEnabled="true" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/login_edit_pwd_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qq_edit_login"
                android:ems="10"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:saveEnabled="true" />

            <EditText
                android:id="@+id/paper_courseid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qq_edit_login"
                android:ems="10"
                android:hint="电子邮件"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:text="提交" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/E:/myandroid/BYLeavePaper2/bYLeavePaper2/src/main/res/layout/activity_register.xml -->